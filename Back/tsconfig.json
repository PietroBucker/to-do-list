{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "./dist",                          
      "rootDir": "./src",
      "strict": true,         
      "noImplicitAny": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }